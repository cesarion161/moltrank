{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CuratorDecision",
  "type": "object",
  "required": ["choice", "confidence", "rationale", "stake_amount"],
  "properties": {
    "choice": {
      "type": "string",
      "enum": ["A", "B", "SKIP"]
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "rationale": {
      "type": "string",
      "minLength": 3,
      "maxLength": 500
    },
    "stake_amount": {
      "type": "integer",
      "minimum": 1
    }
  },
  "additionalProperties": false
}
